.container
  %p
    %b 内容:
    = @micropost.content
  %p
    %b 投稿日時:
    = l @micropost.created_at
  %p
    %b 投稿者:
    = link_to @micropost.user.name, user_path(@micropost.user)

  - if current_user == @micropost.user
    = link_to 'Edit', edit_user_micropost_path(@micropost), class: "btn btn-primary"
    = button_to 'Destroy', user_micropost_path(@micropost), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
  = link_to 'Back', microposts_path, class: "btn btn-secondary"
