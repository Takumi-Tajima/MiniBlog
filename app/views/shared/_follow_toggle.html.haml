- if current_user != user
  - if current_user.following?(user)
    = button_to 'フォロー解除', user_relationship_path, method: :delete, params: { followed_id: user.id }, class: "btn btn-danger"
  - else
    = button_to 'フォローする', user_relationships_path, params: { followed_id: user.id }, class: "btn btn-primary"
